@{
    ViewBag.Title = "Home Page";
    List<Askorbinka.Models.Film> list = ViewBag.Data;
    int j = 0;
}
<div class="row">
    <div class="col-md-12">
        <table class="table table-hover">
            <thead>
                <tr>
                    <td style="font-weight:bold">#</td>
                    <td style="font-weight:bold">Название</td>
                    <td style="font-weight:bold">Год</td>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < list.Count; i++)
                {
                    j++;
                    <tr>
                        <td>@j</td>
                        <td>@list[i].Name</td>
                        <td>@list[i].Year</td>
                        <td>@Html.ActionLink("Удалить", "Delete", new { id = list[i].FilmId}, new { @class = "btn btn-success"})</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>